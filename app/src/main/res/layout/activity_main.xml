<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        style="@style/MainLinearLayoutStyle">

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="1" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_text_answer1"
                style="@style/EditTextStyle"
                android:hint="@string/hint" />

            <ImageView
                android:id="@+id/image_view_q1"
                style="@style/CorrectIncorrectImageStyle"
                android:src="@drawable/incorrect" />
        </RelativeLayout>

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="2" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/radio_vatican"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q2_a1" />

                <RadioButton
                    android:id="@+id/radio_europe"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q2_a2" />

                <RadioButton
                    android:id="@+id/radio_madagascar"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q2_a3" />

                <RadioButton
                    android:id="@+id/radio_sri_lanka"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q2_a4" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q2_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q2_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q2_a1"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q2_a3"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q2_a2"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q2_a4"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q2_a3"
                    android:src="@drawable/incorrect" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="3" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/radio_monkeys_yes"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q3_a1" />

                <RadioButton
                    android:id="@+id/radio_monkeys_no"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q3_a2" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q3_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q3_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q3_a1"
                    android:src="@drawable/correct" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="4" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout style="@style/CheckBoxGroupStyle">

                <CheckBox
                    android:id="@+id/checkbox_30g"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q4_a1" />

                <CheckBox
                    android:id="@+id/checkbox_9kg"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q4_a2" />

                <CheckBox
                    android:id="@+id/checkbox_50kg"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q4_a3" />

                <CheckBox
                    android:id="@+id/checkbox_200kg"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:layout_marginBottom="16dp"
                    android:text="@string/q4_a4" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q4_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q4_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q4_a1"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q4_a3"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q4_a2"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q4_a4"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q4_a3"
                    android:src="@drawable/incorrect" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="5" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout style="@style/CheckBoxGroupStyle">

                <CheckBox
                    android:id="@+id/checkbox_insects"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q5_a1" />

                <CheckBox
                    android:id="@+id/checkbox_fruit"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q5_a2" />

                <CheckBox
                    android:id="@+id/checkbox_plants"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q5_a3" />

                <CheckBox
                    android:id="@+id/checkbox_fish"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:layout_marginBottom="16dp"
                    android:text="@string/q5_a4" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q5_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q5_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q5_a1"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q5_a3"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q5_a2"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q5_a4"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q5_a3"
                    android:src="@drawable/incorrect" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="6" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/radio_live_in_groups"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q6_a1" />

                <RadioButton
                    android:id="@+id/radio_live_in_pairs"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q6_a2" />

                <RadioButton
                    android:id="@+id/radio_live_alone"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q6_a3" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q6_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q6_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q6_a1"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q6_a3"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q6_a2"
                    android:src="@drawable/incorrect" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/QuestionLayoutStyle">

            <TextView
                style="@style/QuestionNrStyle"
                android:text="7" />

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/radio_18_fingers"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q7_a1" />

                <RadioButton
                    android:id="@+id/radio_16_fingers"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q7_a2" />

                <RadioButton
                    android:id="@+id/radio_20_fingers"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q7_a3" />

                <RadioButton
                    android:id="@+id/radio_22_fingers"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q7_a4" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q7_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q7_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q7_a1"
                    android:src="@drawable/incorrect" />

                <ImageView
                    android:id="@+id/image_view_q7_a3"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q7_a2"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q7_a4"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q7_a3"
                    android:src="@drawable/incorrect" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical">

            <LinearLayout style="@style/QuestionLayoutStyle">

                <TextView
                    style="@style/QuestionNrStyle"
                    android:text="8" />

                <TextView
                    style="@style/QuestionTextStyle"
                    android:text="@string/question8" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/lemur"
                style="@style/ImageViewStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup style="@style/RadioGroupStyle">

                <RadioButton
                    android:id="@+id/radio_is_lemur"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q8_a1" />

                <RadioButton
                    android:id="@+id/radio_not_lemur"
                    style="@style/CheckBoxAndRadioButtonStyle"
                    android:text="@string/q8_a2" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_q8_a1"
                    style="@style/CorrectIncorrectImageStyle"
                    android:src="@drawable/correct" />

                <ImageView
                    android:id="@+id/image_view_q8_a2"
                    style="@style/CorrectIncorrectImageStyle"
                    android:layout_below="@id/image_view_q8_a1"
                    android:src="@drawable/incorrect" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                style="@style/ButtonStyle"
                android:layout_marginRight="30dp"
                android:onClick="submitAnswers"
                android:text="@string/submitButton" />

            <Button
                android:id="@+id/button"
                style="@style/ButtonStyle"
                android:onClick="resetAll"
                android:text="@string/resetButton" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>